{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}